#!/bin/sh -x

FROM="{{ item.directory }}"
TO="rsync://{{ item.backup_ip }}/{{ item.name }}"

ACTION="$1"
LABEL="$2"
ARG0="$3"
ARG1="$4"

rsynclist() {
        LISTFILE="$1"
        EXCLISTFILE="$2"

        excludefrom=''
        if [ "$EXCLISTFILE" != "" ]; then
                excludefrom="--exclude-from=${EXCLISTFILE}"
        fi

        exec rsync -avH --delete-before "$excludefrom" --include-from="${LISTFILE}" --exclude='*' "$FROM"/ "$TO"/

        return 0
}

case "$ACTION" in
        rsynclist)
                rsynclist "$ARG0" "$ARG1"
                ;;
esac

exit $?

